# LLM Provider (ollama, openai, vllm)
LLM_PROVIDER=ollama

# OpenAI API Configuration (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here

# Ollama Configuration (if using Ollama - FREE & LOCAL)
# Recommended models: qwen2 (best for Vietnamese), mistral, llama3
OLLAMA_MODEL=qwen2
OLLAMA_BASE_URL=http://localhost:11434

# vLLM Configuration (if using vLLM - LOCAL)
LLM_API_BASE=http://localhost:8000/v1
LLM_MODEL_NAME=Qwen3-14B-AWQ

# Vector Store Configuration
VECTOR_DB_PATH=./vector_db
DOCUMENTS_PATH=./documents

# Application Settings
MAX_TOKENS=2048
TEMPERATURE=0.7
